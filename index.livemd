defmodule Backpacks do
  def split_compartments(line) do
    halfway = trunc(:math.ceil(String.length(line) / 2))

    [
      String.slice(line, 0, halfway),
      String.slice(line, halfway, String.length(line))
    ]
    |> Enum.map(&String.graphemes/1)
  end

  def find_duplicates([left, right]) do
    left
    |> Enum.filter(fn item -> Enum.member?(right, item) end)
    |> Enum.uniq()
  end

  def find_duplicates([a, b, c]) do
    a
    |> Enum.filter(fn item -> Enum.member?(b, item) end)
    |> Enum.filter(fn item -> Enum.member?(c, item) end)
    |> Enum.uniq()
  end

  def score(letter) do
    [base_score | _] = String.to_charlist(letter)

    cond do
      base_score <= 90 -> base_score - 38
      true -> base_score - 96
    end
  end
end
```

