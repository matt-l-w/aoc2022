  defp get_map(lines) do
    lines
    |> Enum.take_while(fn line -> String.length(line) > 0 end)
  end

  def parse_stacks(lines) do
    map = get_map(lines)

    num_stacks =
      map
      |> Enum.at(-1)
      |> String.trim()
      |> String.graphemes()
      |> Enum.at(-1)
      |> parse_int!()

    map = Enum.drop(map, -1)

    for i <- 0..(num_stacks - 1) do
      map
      |> Enum.map(&String.slice(&1, i * @stack_char_width, @stack_char_width))
      |> Enum.map(&String.trim/1)
      |> Enum.filter(&(String.length(&1) > 0))
    end
  end

  def get_moves(lines) do
    {_, moves} = lines |> Enum.split_while(&(String.length(&1) > 1))
    Enum.drop(moves, 1)
  end

  def parse_int!(str) do
    {int, _} = Integer.parse(str)
    int
  end

  def parse_moves(lines) do
    get_moves(lines)
    |> Enum.map(&Regex.run(~r/move (\d+) from (\d+) to (\d+)/, &1))
    |> Enum.filter(fn x -> x != nil end)
    |> Enum.map(fn [_line, amount, from, to] ->
      [parse_int!(amount), parse_int!(from) - 1, parse_int!(to) - 1]
    end)
  end

  def move(stacks, [amount, from, to]) do
    stacks
    |> Enum.with_index()
    |> Enum.map(fn {stack, i} ->
      # IO.inspect(i, label: "i")
      cond do
        i == from ->
          new_stack = Enum.drop(stack, amount)

        # IO.inspect(new_stack, label: "from")
        i == to ->
          additions = Enum.take(Enum.at(stacks, from), amount)
          # IO.inspect(additions, label: "to")
          additions ++ stack

        true ->
          stack
      end
    end)
  end

  def moves(stacks, moves) do
    Enum.reduce(moves, stacks, fn move, acc ->
      Crates.move(acc, move)
    end)
  end
end
