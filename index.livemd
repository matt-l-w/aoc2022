```elixir
defmodule File do
  defstruct name: nil, size: nil
end

defmodule DirRegistry do
  use Agent

  def start_link() do
    case Agent.start_link(fn -> [] end, name: __MODULE__) do
      {:ok, pid} ->
        pid

      {:error, {:already_started, pid}} ->
        DirRegistry.clear()
        pid
    end
  end

  def add(dir) do
    Agent.update(__MODULE__, fn state -> [dir | state] end)
  end

  def all() do
    Agent.get(__MODULE__, & &1)
  end

  def clear() do
    Agent.update(__MODULE__, fn _ -> [] end)
  end
end

defmodule Dir do
  defstruct name: nil, parent: nil, children: []

  use Agent

  def start_link(name, parent) do
    newdir = %Dir{name: name, parent: parent}
    {:ok, pid} = Agent.start_link(fn -> newdir end)
    DirRegistry.add(pid)
    pid
  end

  def value(pid), do: Agent.get(pid, & &1)

  def add_child(pid, child) do
    Agent.update(pid, fn dir ->
      %{dir | children: [child | dir.children]}
    end)
  end

  def size(pid) when is_pid(pid) do
    %Dir{children: children} = Dir.value(pid)
    Enum.map(children, &size/1) |> Enum.sum()
  end

  def size(%File{size: size}), do: size
end

defmodule TraverseDirectory do
  def parse_line(line) do
    line
    |> String.replace(~r/^\$ /, "")
    |> String.split()
  end

  def execute(dir, []), do: dir

  def execute(dir, [["cd", ".."] | commands]) do
    # IO.inspect(Dir.value(dir).name, label: "up")
    %Dir{parent: parent} = Dir.value(dir)
    execute(parent, commands)
  end

  def execute(dir, [["cd", dirname] | commands]) do
    # IO.inspect(dirname, label: "cd")
    child = Dir.start_link(dirname, dir)
    Dir.add_child(dir, child)
    execute(child, commands)
  end

  def execute(dir, [["ls"] | commands]) do
    # IO.inspect(Dir.value(dir).name, label: "ls")
    execute(dir, commands)
  end

  def execute(dir, [["dir", _name] | commands]) do
    # IO.inspect(name, label: "dir")
    execute(dir, commands)
  end

  def execute(dir, [[size, name] | commands]) do
    # IO.inspect(name, label: "file")
    size = String.to_integer(size)
    file = %File{name: name, size: size}
    Dir.add_child(dir, file)
    execute(dir, commands)
  end
end
```

